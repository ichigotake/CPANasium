[% WRAPPER 'include/layout.tt' %]

<h1 style="padding: 70px; text-align: center; font-size: 80px; line-height: 1; letter-spacing: -2px;">Mikutterasium</h1>
<div class="row">
    <p style="text-align: center;">This site aggregates repositories contain mikutter from (gist.)github.</p>
</div>

<hr />

<style>
    .marketing .row {
        margin-top: 20px;
    }
    .description {
        font-size: small;
    }
</style>

<h1>Recent repositories</h1>
<div class="row">
    <table class="table">
        [% FOR v IN recent_repos %]
        <tr><td>[% loop.count %]</td><td><a target="_blank" href="[% v.html_url %]">[% v.full_name %]</a></td><td><span class="description">[% v.description %]</span></td><td>[% localtime(v.updated_at).strftime('%Y-%m-%d %H:%M:%S') %]</td></li>
        [% END %]
    </table>
    <a href="/recent" class="pull-right">More...</a>
</div>

<h1>Authors</h1>
<div class="row">
    <table class="table">
        <thead>
        <tr>
          <th></th>
          <th>Author</th>
          <th>Repos</th>
        </tr>
        </thead>
        [% FOR v IN authors %]
        <tr><td>[% loop.count %]</td><td><a href="/user/[% v.owner_login %]">[% v.owner_login %]</a></td><td>[% v.count %]</td></li>
        [% END %]
    </table>
    <a href="/authors" class="pull-right">More...</a>
</div>


[% END %]
